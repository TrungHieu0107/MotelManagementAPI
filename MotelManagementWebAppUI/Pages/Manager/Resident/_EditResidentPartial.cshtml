                    <input type="hidden" asp-for="@Model.Status" />
                    <input type="hidden" asp-for="@Model.Id"  id="EditId" name="Id"/>

                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary" id="saveChangesBtn">Save</button>
                </div>
            </form>
            <div id="error-message-ed" class="alert alert-danger" style="display:none;"></div>


        </div>
    </div>
